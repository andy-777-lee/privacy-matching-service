rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Stats collection rules - maintained for the closure page
    match /stats/{statId} {
      // Allow anyone to read stats (for displaying user count and trends)
      allow read: if true;
      // Disable all writes
      allow write: if false;
    }

    // Lockdown all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
