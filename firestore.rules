rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection rules
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Unlock requests rules
    match /unlock_requests/{requestId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Notifications rules
    match /notifications/{notificationId} {
      allow read, update: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create: if request.auth != null;
    }

    // Unlocked Profiles rules - NEWLY ADDED
    match /unlockedProfiles/{userId} {
      // Users can read their own unlocked list
      allow read: if request.auth != null && request.auth.uid == userId;
      // Anyone authenticated can write (needed for admin to add to user's list)
      // In a real app, you'd restrict this to admins only
      allow write: if request.auth != null;
    }
  }
}
